@model CreateBugRequestModel
@{
    ViewData["Title"] = "Create Bug";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBug">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <script>alert('@ViewBag.Message')</script>
            }
            <div class="form-group">
                <label asp-for="BugTitle" class="control-label"></label>
                <input asp-for="BugTitle" class="form-control" />
                <span asp-validation-for="BugTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>